# ========================
# Docker Compose Environment Variables
# ========================
# Copy this file to .env.docker and fill in your values
# This file is used by docker-compose.yml

# ========================
# Database Configuration
# ========================
POSTGRES_USER=btc_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bitcoin_advisor_db
DATABASE_URL=postgresql://btc_user:your_secure_password_here@postgres:5432/bitcoin_advisor_db

# ========================
# API Keys (same as .env)
# ========================
OM1_API_KEY=om1_live_your_api_key_here
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o
NEWS_API_URL=https://your-news-api-url-here/news
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here
LLM_PROVIDER=groq
