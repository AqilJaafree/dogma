# ========================
# OM1 Configuration
# ========================
OM1_API_KEY=om1_live_your_api_key_here

# ========================
# LLM Configuration (Groq or OpenAI)
# ========================
# Groq API (Recommended - Faster & Free tier available)
# Get your key at: https://console.groq.com/keys
LLM_PROVIDER=groq
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI API (Alternative)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ========================
# News Sentiment API
# ========================
NEWS_API_URL=https://your-news-api-url-here/news

# ========================
# CryptoPanic API (Alternative)
# ========================
# Free tier: 50 requests/hour
# Get your key at: https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# ========================
# Database Configuration
# ========================
DATABASE_URL=postgresql://btc_user:btc_pass@localhost:5432/bitcoin_advisor_db

# ========================
# Redis Configuration
# ========================
REDIS_URL=redis://localhost:6379

# ========================
# Bitcoin Price APIs (Multiple sources for reliability)
# ========================
# Primary: Binance API (No key required)
BINANCE_API_URL=https://api.binance.com/api/v3

# Backup: CoinGecko API (No key required, free tier)
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Backup 2: CoinCap API (No key required)
COINCAP_API_URL=https://api.coincap.io/v2

# ========================
# Next.js Configuration
# ========================
# Note: NODE_ENV is automatically set by Next.js (development/production)
NEXT_PUBLIC_WS_URL=ws://localhost:8000
OM1_API_URL=http://localhost:8000
